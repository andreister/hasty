<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.blunderer.materialdesignlibrary.sample">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/logo"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".cardviews.CardViewNormalActivity"/>
        <activity android:name=".navigationdrawers.NavigationDrawerWithAccountsActivity"/>
        <activity android:name=".viewpagers.ViewPagerActivity"/>
        <activity android:name=".viewpagers.ViewPagerWithIndicatorActivity"/>
        <activity android:name=".viewpagers.ViewPagerWithTabsActivity"/>
        <activity android:name=".viewpagers.ViewPagerWithTabsExpandedActivity"/>
        <activity android:name=".listviews.ListViewWithRefreshActivity"/>
        <activity android:name=".listviews.ListViewActivity"/>
        <activity android:name=".listviews.ListViewWithCustomLayoutActivity"/>
        <activity android:name=".scrollviews.ScrollViewActivity"/>
        <activity android:name=".scrollviews.ScrollViewWithRefreshActivity"/>
        <activity android:name=".searchbar.SearchBarActivity"/>
        <activity android:name=".searchbar.SearchBarAutoCompletionActivity"/>

    </application>

</manifest>
